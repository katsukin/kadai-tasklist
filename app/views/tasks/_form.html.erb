<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %><br>
  
  <%= f.label :status, 'ステイタス' %>
  <%= f.select :status, [["マンプク", "マンプク"],["ハラペコ", "ハラペコ"],["ハラハチブ", "ハラハチブ"],["ムネヤケ", "ムネヤケ"],["イガワルイ", "イガワルイ"]] %>
  <br>
  
  <%= f.submit '投稿' %>
<% end %>

